<!DOCTYPE html>
<html>
<head>
  <title>Tabela de Vendas</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>
  <div class="container">
    <h1>Tabela de Vendas</h1>

    <table class="table">
      <thead>
        <tr>
          <th>ID da Venda</th>
          <th>Nome do Produto</th>
          <th>Nome do Vendedor</th>
          <th>Valor</th>
        </tr>
      </thead>
      <tbody>
        <% for (var i = 0; i < vendas.length; i++) { %>
          <tr>
            <td><%= vendas[i].id %></td>
            <td><%= vendas[i].nome %></td>
            <td><%= vendas[i].vendedor %></td>
            <td><%= vendas[i].valor %></td>
          </tr>
        <% } %>
      </tbody>
    </table>
    <button class="btn btn-primary"><a href="/cadastrar-venda" class="text-white">Cadastrar vendas</a></button>
    <button class="btn btn-primary"><a href="/dashboard" class="text-white">Dashboard</a></button>
  </div>

  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>
