<!DOCTYPE html>
<html>
<head>
  <title>Dashboard</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <style>
    .card {
      border-radius: 10px 0px 10px 0px;
      border: 1px solid black;
    }

    h1 {
      color: #000;
    }
  </style>
</head>
<body style="background-color: #f0f5ff;">
  <div class="container">
    <h1>Dashboard</h1>
    <br/>
    <div class="row">
      <div class="col-md-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Vendas Totais</h5>
            <p class="card-text">R$ 500</p>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Vendas Mensais</h5>
            <p class="card-text">R$ 100</p>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Vendas Semanais</h5>
            <p class="card-text">R$ 25</p>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Vendas Diárias</h5>
            <p class="card-text">R$ 5</p>
          </div>
        </div>
      </div>
    </div>

    <div class="row mt-4">
      <div class="col-md-6">
        <canvas id="barChart"></canvas>
      </div>
      <div class="col-md-6">
        <canvas id="lineChart"></canvas>
      </div>
    </div>
    <a href="/vendas" class="btn btn-primary mt-4">Vendas</a>
    <a href="/logout" class="btn btn-danger mt-4">Logout</a>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    // Dados falsos para os gráficos
    var dataLabels = ["Janeiro", "Fevereiro", "Março", "Abril", "Maio"];
    var dataSales = [50, 100, 75, 120, 90];

    // Gráfico de barras
    var barChart = new Chart(document.getElementById("barChart"), {
      type: 'bar',
      data: {
        labels: dataLabels,
        datasets: [{
          label: "Vendas Mensais",
          data: dataSales,
          backgroundColor: '#000'
        }]
      },
      options: {
        legend: { display: false },
        scales: {
          yAxes: [{
            ticks: {
              beginAtZero: true
            }
          }]
        }
      }
    });

    // Gráfico de linhas
    var lineChart = new Chart(document.getElementById("lineChart"), {
      type: 'line',
      data: {
        labels: dataLabels,
        datasets: [{
          label: "Vendas Mensais",
          data: dataSales,
          borderColor: '#000',
          fill: false
        }]
      },
      options: {
        legend: { display: false },
        scales: {
          yAxes: [{
            ticks: {
              beginAtZero: true
            }
          }]
        }
      }
    });
  </script>
</body>
</html>
